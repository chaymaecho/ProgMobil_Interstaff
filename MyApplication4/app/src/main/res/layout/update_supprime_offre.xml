<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:paddingHorizontal="@dimen/card_padding"
        android:background="@drawable/okay"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="@dimen/card_padding"
            android:layout_marginBottom="@dimen/card_padding"
            android:background="@drawable/vertjaun">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvUpdateJobTitle"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"

                    android:fontFamily="sans-serif-black"
                    android:paddingLeft="@dimen/card_padding"
                    android:paddingTop="@dimen/card_padding"
                    android:paddingRight="@dimen/card_padding"
                    android:textSize="20dp" />


                <TextView
                    android:id="@+id/tvUpdateJoborg"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"

                    android:fontFamily="sans-serif-black"
                    android:paddingLeft="@dimen/card_padding"
                    android:paddingTop="@dimen/card_padding"
                    android:paddingRight="@dimen/card_padding"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tvUpdateJobSalary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvUpdateJobDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tvUpdateJobDescription"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_alignParentTop="true"
                    android:paddingLeft="@dimen/card_padding"
                    android:paddingTop="@dimen/card_padding"
                    android:paddingRight="@dimen/card_padding"
                    android:layout_below="@id/tvUpdateJobDate"
                    android:textSize="16dp" />
            </LinearLayout>

            <Button
                android:id="@+id/btnVblockRemove"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="15dp"
                android:backgroundTint="@color/purple_200"
                android:text="@string/delete_vacancy" />

            <Button
                android:id="@+id/btnVblockUpdate"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="15dp"
                android:backgroundTint="@color/purple_700"
                android:text="@string/update_vacancy" />

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>