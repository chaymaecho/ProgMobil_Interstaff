<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".frontend.DashBoard">

    <!--Top Navbar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">

            <ImageView
                android:id="@+id/backArrow"
                android:layout_width="@dimen/back_width"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:padding="@dimen/icon_padding"
                android:src="@drawable/ic_baseline_arrow_back_ios_new_24" />


        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <LinearLayout
            android:paddingTop="@dimen/back_width"
            android:paddingBottom="@dimen/back_width"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/background_padding"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="10dp"
            tools:layout_editor_absoluteY="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">


                    <RelativeLayout
                        android:layout_width="358dp"
                        android:layout_height="269dp"
                        android:layout_marginStart="@dimen/card_padding"
                        android:layout_marginTop="@dimen/card_padding"
                        android:layout_marginEnd="@dimen/card_padding"
                        android:layout_marginBottom="@dimen/card_padding"
                        android:layout_weight="0.5"
                        android:background="@drawable/rounded">

                        <TextView
                            android:id="@+id/tvCustomerMenuAddTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-black"
                            android:padding="@dimen/card_padding"
                            android:text="gerer les offres "
                            android:textColor="@color/title2"
                            android:textSize="30sp" />

                        <Button
                            android:id="@+id/btnVacancy"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="0dp"
                            android:background="@android:color/transparent"
                            android:onClick="onClick"
                            android:padding="@dimen/card_padding"
                            android:text="@string/Enter"
                            android:textColor="@color/black"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <ImageView
                        android:layout_width="191dp"
                        android:layout_height="167dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="23dp"
                        android:src="@drawable/vacancymenu" />


                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">


                    <RelativeLayout
                        android:layout_width="358dp"
                        android:layout_height="269dp"
                        android:layout_marginStart="@dimen/card_padding"
                        android:layout_marginTop="@dimen/card_padding"
                        android:layout_marginEnd="@dimen/card_padding"
                        android:layout_marginBottom="@dimen/card_padding"
                        android:layout_weight="0.5"
                        android:background="@drawable/rounded">

                        <TextView
                            android:id="@+id/NONTRAIT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-black"
                            android:padding="@dimen/card_padding"
                            android:text="gerre les candidatures p
                            as encore traiter"
                            android:textColor="@color/title2"
                            android:textSize="20sp" />

                        <Button
                            android:id="@+id/btnNONTRAIT"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="0dp"
                            android:background="@android:color/transparent"
                            android:onClick="onClick"
                            android:padding="@dimen/card_padding"
                            android:text="@string/Enter"
                            android:textColor="@color/black"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <ImageView
                        android:layout_width="191dp"
                        android:layout_height="167dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="23dp"
                        android:src="@drawable/vacancymenu" />


                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/card_padding"
                        android:layout_marginTop="@dimen/card_padding"
                        android:layout_marginEnd="@dimen/card_padding"
                        android:layout_marginBottom="@dimen/card_padding"
                        android:layout_weight="0.5"
                        android:background="@drawable/rounded">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-black"
                            android:padding="@dimen/card_padding"
                            android:text="GERRE LES CANDIDATURES ACCEPTE"
                            android:textAlignment="textEnd"
                            android:textColor="@color/title2"
                            android:textSize="20sp" />

                        <Button
                            android:id="@+id/btnFeedbackID"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="0dp"
                            android:background="@android:color/transparent"
                            android:onClick="onClick"
                            android:textSize="20dp"
                            android:padding="@dimen/card_padding"
                            android:text="@string/Enter"
                            android:textColor="@color/black"
                            android:textStyle="bold" />



                    </RelativeLayout>


                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


    <!--Bottom Navbar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="#FFFFFF">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5">

            <ImageView
                android:id="@+id/image_home"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/icon_padding"
                android:src="@drawable/home" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5">

            <ImageView
                android:id="@+id/image_notif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/icon_padding"
                android:src="@drawable/notification" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5">

            <ImageView
                android:id="@+id/image_profil"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/icon_padding"
                android:src="@drawable/profile" />
        </RelativeLayout>

    </LinearLayout>



</LinearLayout>